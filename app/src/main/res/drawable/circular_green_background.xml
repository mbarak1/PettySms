<!-- circular_glow_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow shape -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke
                android:width="20dp"
                android:color="#33FFFFFF"
            />
        </shape>
    </item>

    <!-- Inner circular gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="?attr/colorSurfaceContainerHigh"
            android:endColor="@color/new_green_color"
            android:type="linear"
            android:angle="45"
            />
        </shape>
    </item>
</layer-list>
