                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/pettyCashSupportingDocumentDateLayout">

                        <TextView
                            android:id="@+id/pettyCashSupportingDocumentImagesLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:text="Images:"
                            android:textFontWeight="1000"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pettyCashSupportingDocumentImagesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
