<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:textAlignment="center">

    <cdflynn.android.library.checkview.CheckView
        android:id="@+id/check"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:checkView_strokeColor="@color/green_color"
        app:checkView_strokeWidth="@dimen/check_stroke_width"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/success_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Loading Transactions..."
        android:textColor="?android:textColorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/check"
        app:layout_constraintLeft_toRightOf="@id/check"
        app:layout_constraintStart_toStartOf="@+id/check"
        app:layout_constraintTop_toBottomOf="@+id/check" />
</androidx.constraintlayout.widget.ConstraintLayout>