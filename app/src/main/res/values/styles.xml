<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Other styles that are not dialog-related can stay here -->
    <style name="RoundedRectangleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="ShapeAppearance.Material3.Corner.Full" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Custom Material 3 Card Styles -->
    <style name="Widget.App.Card.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <style name="Widget.App.Card.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <style name="Widget.App.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Card style for dashboard summary cards -->
    <style name="Widget.App.Card.Summary" parent="Widget.App.Card.Elevated">
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">12dp</item>
    </style>
</resources> 